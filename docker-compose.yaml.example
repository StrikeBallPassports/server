version: "3.8"

services:
  app:
    build: .
    env_file:
      - .env
    volumes:
      - ./:/opt/project
    ports:
      - "8000:80"
    depends_on:
      - database


  database:
    image: postgres:14-alpine
    env_file:
      - .env
    volumes:
      - ../data/postgres:/var/lib/postgresql/data
    ports:
      - "15432:5432"